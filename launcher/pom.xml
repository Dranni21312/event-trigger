<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>newtrig</artifactId>
        <groupId>gg.xp</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>launcher</artifactId>

    <properties>
        <mainClass>gg.xp.xivsupport.gui.GuiLaunch</mainClass>
        <mainImportClass>gg.xp.xivsupport.gui.GuiImportLaunch</mainImportClass>
        <mainUpdateClass>gg.xp.xivsupport.gui.Update</mainUpdateClass>
        <launcherJar>./launcher-${project.version}.jar</launcherJar>
        <launcherJarRelativeToPom>./target/windows/launcher-${project.version}.jar</launcherJarRelativeToPom>
    </properties>
    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <outputDirectory>target/windows/deps</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>zip-file-no-jre</id>
                        <phase>install</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/bin.xml</descriptor>
                            </descriptors>
                            <finalName>triggevent-win</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                    <execution>
                        <id>zip-file</id>
                        <phase>install</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/bin-no-jre.xml</descriptor>
                            </descriptors>
                            <finalName>triggevent-win-byoj</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-jar</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/windows</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}</directory>
                                    <includes>launcher-${project.version}.jar</includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-jar-secondary</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/windows/deps</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}</directory>
                                    <includes>launcher-${project.version}.jar</includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-jre</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/windows/jre</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${java.home}</directory>
                                </resource>
                            </resources>

                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-config-file</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/windows</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/classes</directory>
                                    <includes>args.txt</includes>
                                </resource>
                            </resources>

                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>2.1.2</version>
                <executions>
                    <execution>
                        <id>l4j-import-gui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <outfile>target/windows/triggevent-import.exe</outfile>
                            <classPath>
                                <mainClass>${mainImportClass}</mainClass>
                                <addDependencies>false</addDependencies>
                                <preCp>./preload/*.jar;./deps/*.jar;./user/*.jar;${launcherJar}</preCp>
                            </classPath>
                            <jar>./nonexistent.jar</jar>
                        </configuration>
                    </execution>
                    <execution>
                        <id>l4j-gui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <singleInstance>
                                <mutexName>triggevent</mutexName>
                                <windowTitle>Triggevent</windowTitle>
                            </singleInstance>
                            <outfile>target/windows/triggevent.exe</outfile>
                            <classPath>
                                <mainClass>${mainClass}</mainClass>
                                <addDependencies>false</addDependencies>
                                <preCp>./preload/*.jar;./deps/*.jar;./user/*.jar;${launcherJar}</preCp>
                            </classPath>
                            <jar>./nonexistent.jar</jar>
                        </configuration>
                    </execution>
                    <execution>
                        <id>l4j-updater</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <outfile>target/windows/triggevent-upd.exe</outfile>
                            <classPath>
                                <mainClass>${mainUpdateClass}</mainClass>
                                <addDependencies>false</addDependencies>
                            </classPath>
                            <jar>${launcherJarRelativeToPom}</jar>
                            <dontWrapJar>false</dontWrapJar>
                        </configuration>
                    </execution>

                </executions>
                <configuration>
                    <!-- Common config-->
                    <jre>
                        <path>jre</path>
                        <minVersion>${java.version}</minVersion>
                        <opts><opt>@args.txt</opt></opts>
                    </jre>
                    <headerType>gui</headerType>
                    <errTitle>Triggevent</errTitle>
                    <dontWrapJar>true</dontWrapJar>
                    <chdir>.</chdir>
                    <downloadUrl>https://www.oracle.com/java/technologies/downloads/#jdk17-windows</downloadUrl>
                    <versionInfo>
                        <fileVersion>1.0.0.0</fileVersion>
                        <txtFileVersion>txt file version</txtFileVersion>
                        <fileDescription>description</fileDescription>
                        <copyright>2021</copyright>
                        <productVersion>1.0.0.0</productVersion>
                        <txtProductVersion>1.0.0.0</txtProductVersion>
                        <productName>Triggevent</productName>
                        <internalName>triggevent</internalName>
                        <originalFilename>original.exe</originalFilename>
                    </versionInfo>
                    <messages>
                        <bundledJreErr>You need to download Java version 17 or higher, or download the version
                            of Triggevent with bundled Java.
                        </bundledJreErr>
                        <jreVersionErr>You need to download Java version 17 or higher, or download the version
                            of Triggevent with bundled Java.
                        </jreVersionErr>
                    </messages>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>

        <dependency>
            <groupId>gg.xp</groupId>
            <artifactId>xivsupport</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>gg.xp</groupId>
            <artifactId>triggers</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.swingexplorer</groupId>
            <artifactId>swingexplorer-core</artifactId>
            <version>1.7.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>gg.xp</groupId>
            <artifactId>actimport</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

</project>